/home/user/p2 {
  network inet stream,
  /etc/hostid r,
  /etc/hosts r,
  /etc/passwd r,
  /etc/timezone r,
  /proc/cpuinfo r,
  /proc/filesystems r,
  /proc/uptime r,
  /tmp/project2* rw,
  /usr/lib/x86_64-linux-gnu/libc-2.31.so mr,
  /usr/lib/x86_64-linux-gnu/libnss_compat-2.31.so mr,
  /usr/lib/x86_64-linux-gnu/libpthread-2.31.so mr,
  /var/log/syslog r,
  owner @{HOME}/.project2/config w,
  owner @{HOME}/template r,
}
